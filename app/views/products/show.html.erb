<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <br>
    <% if current_user %>
  <div class="row">
    <div class="col-4"></div>
    <div class="col-8">
    <%= form_for [@product, @review] do |f| %>
      Review: <%= f.text_area :description %>
      Rating: <%= f.select :rating, options_for_select(["", 1, 2, 3, 4, 5]) %>
      <%= f.submit "Submit" %>
    <% end %>
      <% else %>
      <p>Please sign in to add reviews.</p>
    <% end %>
  </div>
  </div>

    <div>
      <table>
        <thead>
          <tr>
            <th>User</th>
            <th colspan="3">Review</th>
            <th>Rating</th>
          </tr>
        </thead>
    <% @product.reviews.reverse_each do |review|%>
      <%= render 'reviews', user: User.find_by(id: review.user_id), description: review[:description], rating: review[:rating], id: review[:id] %>
      <% end %>
    </table>
    </div>
  </article>

</section>
